<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/bg_main"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <TextView
        android:id="@+id/question_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:layout_below="@+id/image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_question_one"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp"
        android:textColor="@color/bg_text"/>

    <TextView
        android:id="@+id/question_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2sp"
        android:layout_below="@+id/question_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_question_two"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp"
        android:textColor="@color/bg_text"/>

    <TextView
        android:id="@+id/answer_info"
        android:layout_below="@+id/question_two"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="27sp"
        android:textColor="@color/bg_text"/>

    <Button
        android:id="@+id/button_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/answer_info"
        android:layout_marginTop="6sp"
        android:background="@color/but_clr"
        android:text="@string/s_button_go"
        android:onClick="onClick"/>




</RelativeLayout>
